{
  "openapi": "3.1.0",
  "info": {
    "title": "Gradeless API",
    "version": "1.0.0",
    "description": "List lessons and open an embedded YouTube lesson page."
  },
  "servers": [
    {
      "url": "https://gradeless-chatgpt-connector.onrender.com",
      "description": "Production"
    }
  ],
  "paths": {
    "/api/lessons": {
      "get": {
        "operationId": "listLessons",
        "summary": "List all lessons",
        "description": "Returns an array of lessons with id, title, desc and youtube_id.",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Lesson" }
                }
              }
            }
          }
        }
      }
    },
    "/lesson/{id}": {
      "get": {
        "operationId": "openLesson",
        "summary": "Open a lesson page",
        "description": "Returns an HTML page that embeds the lessonâ€™s YouTube video.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Lesson id (e.g., l1, l2, l3, l4)",
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "HTML page",
            "content": {
              "text/html": {
                "schema": { "type": "string" }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Lesson": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "example": "l1" },
          "title": { "type": "string" },
          "desc": { "type": "string" },
          "youtube_id": { "type": "string" }
        },
        "required": ["id", "title", "youtube_id"]
      }
    }
  }
}
